---
import "@/styles/global.css"
import { ClientRouter } from "astro:transitions"

import Footer from "@/components/layout/Footer.astro"
import Navbar from "@/components/layout/Navbar.astro"
import ParticlesBG from "@/components/layout/Particles"
import PostHog from "@/components/PostHog.astro"
import { SEO } from "astro-seo"

interface Props {
  title: string
  OGimg?: string
  description: string
}

const { title, OGimg, description } = Astro.props
const currentPath = Astro.url.pathname
const siteURL = "https://danielmamuza.com"
const canonical = currentPath === "/" ? siteURL : `${siteURL}${currentPath}`
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <SEO
      title={title === "Home" ? "Daniel Mamuza" : title}
      titleTemplate={title === "Home" ? undefined : "%s - Daniel Mamuza"}
      description={description}
      canonical={canonical}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: OGimg ?? "https://danielmamuza.com/preview.jpg",
          url: canonical,
        },
        optional: {
          description: description.split(".")[0] + ".",
          siteName: "Daniel Mamuza",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: title === "Home" ? "Daniel Mamuza - Software Engineer" : `${title} - Daniel Mamuza`,
        image: OGimg ?? "https://danielmamuza.com/preview.jpg",
        imageAlt: "Daniel Mamuza Portfolio Preview",
        description: description,
      }}
      extend={{
        link: [
          { rel: "icon", href: "/favicon.ico" },
          { rel: "icon", type: "image/png", sizes: "32x32", href: "/favicon/favicon-32x32.png" },
          { rel: "icon", type: "image/png", sizes: "16x16", href: "/favicon/favicon-16x16.png" },
          { rel: "apple-touch-icon", sizes: "180x180", href: "/favicon/apple-touch-icon.png" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
          // Preconnect hints for performance optimization
          { rel: "preconnect", href: "https://images.weserv.nl" },
          { rel: "preconnect", href: "https://shared.cloudflare.steamstatic.com" },
          { rel: "preconnect", href: "https://a.ltrbxd.com" },
          { rel: "dns-prefetch", href: "//weserv.nl" },
          { rel: "dns-prefetch", href: "//steamstatic.com" },
          { rel: "dns-prefetch", href: "//ltrbxd.com" },
        ],
        meta: [],
      }}
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- blocking script to set dark mode before paint -->
    <script is:inline>
      ;(function () {
        const getThemePreference = () => {
          if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
            return localStorage.getItem("theme")
          }
          return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "theme-light"
        }
        const isDark = getThemePreference() === "dark"
        document.documentElement.classList[isDark ? "add" : "remove"]("dark")
      })()
    </script>

    <ClientRouter />

    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Daniel Mamuza",
        url: "https://danielmamuza.com",
        jobTitle: "Software Engineer",
        sameAs: ["https://github.com/mamuzad", "https://linkedin.com/in/danielmamuza"],
        knowsAbout: ["Full-stack Development", "Software Engineering", "User Interface Design"],
      })}
    />
    <PostHog />
  </head>
  <body>
    <ParticlesBG client:load />
    <Navbar />
    <div class="mx-6 md:mx-0">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  html {
    tab-size: 2;
  }

  html,
  body {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* body {
    background-image: url("/src/assets/background.svg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
  } */
</style>

<script is:inline>
  function setDarkMode(document) {
    const getThemePreference = () => {
      if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
        return localStorage.getItem("theme")
      }
      return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "theme-light"
    }
    const isDark = getThemePreference() === "dark"
    document.documentElement.classList[isDark ? "add" : "remove"]("dark")

    if (typeof localStorage !== "undefined") {
      const observer = new MutationObserver(() => {
        const isDark = document.documentElement.classList.contains("dark")
        localStorage.setItem("theme", isDark ? "dark" : "theme-light")
      })
      observer.observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["class"],
      })
    }
  }

  // Initial load is handled by blocking script in <head>
  // Only need to handle Astro transitions
  document.addEventListener("astro:before-swap", (ev) => {
    setDarkMode(ev.newDocument)
  })

  // sounds
  const sounds = ["/sounds/click1.wav", "/sounds/click2.wav", "/sounds/click3.wav", "/sounds/click4.wav"]

  let isPlaying = false
  let sound = new Audio()

  const playRandomSound = () => {
    // Check if sound is muted
    if (window.soundMuted) return

    const randomSound = sounds[Math.floor(Math.random() * sounds.length)]

    if (isPlaying) {
      sound.pause()
      sound.currentTime = 0
    }

    sound.src = randomSound

    isPlaying = true
    sound.play()

    sound.addEventListener(
      "ended",
      () => {
        isPlaying = false
      },
      { once: true }
    )
  }

  const initClicker = () => {
    const clickElements = document.querySelectorAll("button, a")

    clickElements.forEach((element) => {
      if (!element.classList.contains("no-sound")) element.addEventListener("click", playRandomSound)
    })
  }

  document.addEventListener("astro:page-load", initClicker)
  initClicker()
</script>
